---
import Link from "~/components/Link.astro";
import BulletPoints from "./BulletPoints.astro";
import ResumeCardGrid from "./ResumeCardGrid.astro";

export interface Props {
  title: string;
  issuedBy: string;
  issuedDate: string;
  certUrl: string;
  length?: string;
  items: string[][];
  itemsTitle: string;
  includesPractice: boolean;
}

const {
  title,
  issuedBy,
  issuedDate,
  certUrl,
  length,
  items,
  itemsTitle,
  includesPractice,
} = Astro.props;
---

<ResumeCardGrid>
  <div slot="left-side">
    <div class="cert-info">
      <h4>{title}</h4>
      <span class="flex flex-col gap-1 items-center">
        <!-- <Icon name="mdi:office-building" alt="Office icon" /> -->
        {issuedBy}</span
      >
      {
        length && (
          <span class="flex flex-col gap-1 items-center">
            {/* <Icon name="mdi:clock" alt="Clock icon" /> */}
            {`Length: ${length}${includesPractice ? " + Practice" : ""}`}
          </span>
        )
      }
      <span class="flex flex-col gap-1 items-center">
        <!-- <Icon name="mdi:calendar-month" alt="Calendar icon" /> -->
        Issued: {issuedDate}</span
      >
    </div>
    <div class="cert-link">
      <Link url={certUrl} name="View Certificate" />
    </div>
  </div>
  <div slot="right-side">
    <div class="title">
      <h4>{itemsTitle}</h4>
    </div>
    <div class="flex flex-row gap-2">
      {
        items &&
          items.map((itemList) => (
            <div class="flex flex-col gap-2" role="list">
              <BulletPoints items={itemList} />
            </div>
          ))
      }
    </div>
  </div>
</ResumeCardGrid>
