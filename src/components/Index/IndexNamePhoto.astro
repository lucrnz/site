---
export interface Props {
  name: string;
  subtitle: string;
  avatarUrl: string;
  avatarAlt: string;
}

const { name, subtitle, avatarUrl, avatarAlt } = Astro.props;
---

<div class="index-header">
  <div class="left-side">
    <img src={avatarUrl} alt={avatarAlt} class="aspect-square" />
  </div>
  <div class="right-side">
    <h1>{name}</h1>
    <h4>{subtitle}</h4>
  </div>
</div>
